<%- include('../partials/header')  %>

<h2>Create a New Viewing for Your Coven</h2>

<form action="/covens/<%= coven._id %>/viewings" method="POST">
    <label>Movie Name:</label>
    <input name="movieTitle" placeholder="Hocus Pocus" required>
    <label>Host:</label>
    <select  name="host" required>
        <% coven.members.forEach(function(m) { %>
            <option value="<%= m.name %>"><%= m.name %></option>
        <% }); %>
    </select>
    <label>Location:</label>
    <input name="location" placeholder="Thackery Binx's House" required>
    <label>Date/Time:</label>
    <input name="viewingTime" type="datetime-local" required>
    <br>
    <button id="create" type="submit">Schedule New Viewing</button>
</form>

<%- include('../partials/footer')  %>